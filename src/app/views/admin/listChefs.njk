{% extends 'layoutAdmin.njk'%}

{% block content %}

    <h3 class="admin-titles">Gerenciar Chefs</h3>

    <div class="wrapper-chefs">
        {% for chef in chefs %}
            <div class="chef-card">
                <img src="{{chef.avatar_url}}" alt="{{chef.name}}">
                <div>
                    <p class="chefsList">{{chef.name}}</p>
                    <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
                </div>
                
            </div>
        
        {% endfor %}
    </div>

{% endblock content %}