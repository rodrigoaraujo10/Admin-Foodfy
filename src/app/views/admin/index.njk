{% extends 'layoutAdmin.njk' %}

{% block head%}

    <title>Receitas - Foodfy</title>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
rel="stylesheet">
{% endblock %}

    {% block content %}

        <h3 class="admin-titles">Gerenciar Receitas</h3>
     

        <section class="cards">

        {% for recipe in recipes %} 
    
    <div class="card">
        <a href="/admin/recipes/{{recipe.id}}">
        <div class="imgCard">
            <img src="{{recipe.image}}" alt="">
        </div>
        </a>
        <div class="recipe">
            <p class="title">{{recipe.title}}</p>
             <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
            <p class="chef">{{recipe.chef}}</p>

            <h3>{{total_recipes}}</h3>
           
        </div>
    </div>
    
                
        {% endfor %}

        </section>

    {% endblock content %}
