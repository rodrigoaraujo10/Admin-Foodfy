{% extends 'layoutAdmin.njk' %}

{% block head %}
    <title>{{recipe.title}}</title>

{% endblock %}

{% block content %}
        
        <div class="adminTop">
            <h3 class="adminTitle">Receita: {{recipe.title}}</h3>
           <button>EDITAR</button>
        </div>

    <div class="recipeDetail">
        <div class="recipe-header">
            <img src="{{recipe.image}}" alt="{{recipe.title}}">
            <h1>{{recipe.title}}</h1>
            <h2>Por {{recipe.author}}</h2>
        </div>

    <div class="recipe-content">
        <div id="ingredients" class="topic">
            <h3>Ingredientes</h3>
            <h4 class="botao">ESCONDER</h4>

            <div class="show-hide" class="topic-content">  
            <ul>
                {%  for ingredient in recipe.ingredients %}
                    <li>{{ingredient}}</li>
                {% endfor %}
                
                </ul>
              </div>  
            </div>
        </div>

        <div id="preparation" class="topic">
            <h3>Modo de Preparo</h3>
            <h4 class="botao">ESCONDER</h4>
        <div class="show-hide" class="topic-content">  
            <ul>
                {%  for preparation in recipe.preparation %}
                    <li>{{preparation}}</li>
                {% endfor %}

            <li></li>
            
            </ul>
        </div>    
        </div>

        <div id="information" class="topic">
            <h3>Informações adicionais</h3>
            <h4 class="botao"> ESCONDER</h4>
        <div class="show-hide"class="topic-content"> 
            <p>{{recipe.information}}</p>
        </div>
    </div>
    </div>
<script src="\scripts.js"></script>
   
{% endblock content %}
 
 